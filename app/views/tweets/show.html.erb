<h4 class="display-5 my-3">Tweet</h4>

<%= render @tweet, retweet: false %>

<h4 class="display-7 my-3">Likes</h4>
<ul>
  <% @tweet.likes.each do |like| %>
    <li class="tweet-detail-li">
      <%= image_tag(like.user_pic, style: 'width:50px; height:50px', class: 'user-picture') %>
    </li>
  <% end %>
</ul>
<% if @tweet.user == current_user %>
<%= link_to 'Edit', edit_tweet_path(@tweet) %> |
<% end %>
<%= link_to 'Back', tweets_path %>